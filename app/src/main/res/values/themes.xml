<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JunkCleaner" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>

    </style>

    <style name="Theme.JunkCleaner" parent="Base.Theme.JunkCleaner" />

    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:theme">@style/NoRippleTheme</item>
    </style>
    <style name="NoRippleTheme">
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>
    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize AlertDialog attributes -->
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:background">@drawable/dialog_background</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">#FFFFFF</item> <!-- White dropdown icon color -->
        <item name="android:popupBackground">@color/grey_bg</item> <!-- Grey dropdown background -->
        <item name="android:textColor">@color/white</item> <!-- White text color -->
    </style>

    <style name="PermissionCustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize AlertDialog attributes -->
        <item name="android:windowBackground">@drawable/permission_dialog_bg</item>
        <item name="android:background">@drawable/permission_dialog_bg</item>
<!--        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>-->
<!--        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>-->
    </style>
