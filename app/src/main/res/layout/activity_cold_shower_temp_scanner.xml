<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Fragment.ColdShowerProcessManagFragment">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/widget_size_40"
        android:layout_height="@dimen/widget_size_40"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:rotation="317"
        android:src="@drawable/rocket_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Storage freed"
        android:textColor="@color/white"
        android:fontFamily="@font/lato_bold"
        android:textSize="@dimen/font_size_14"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Regularly speed up phonre to improve"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_size_11"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/SuccessfullLoader"
        android:layout_width="@dimen/widget_size_200"
        android:layout_height="@dimen/widget_size_200"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/cold_booster_anim" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/lato_bold"
        android:text="Cold Shower"
        android:textColor="@color/blue"
        android:textSize="@dimen/font_size_14"
        app:layout_constraintBottom_toTopOf="@+id/textView16"
        app:layout_constraintEnd_toEndOf="@+id/SuccessfullLoader"
        app:layout_constraintStart_toStartOf="@+id/SuccessfullLoader" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Phone CPU temperature high which may affect phone performance. One tab to cool now!"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/coldShowerBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/coldShowerBtn"
        android:layout_width="@dimen/widget_size_120"
        android:layout_height="@dimen/widget_size_35"
        android:layout_marginBottom="32dp"
        android:background="@drawable/optimize_btn"
        android:text="Cold Shower"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/textView11" />
</androidx.constraintlayout.widget.ConstraintLayout>