<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/grey_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/thisYearAppImage"
            android:layout_width="@dimen/font_size_35"
            android:layout_height="@dimen/font_size_35"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/app_diary" />

        <TextView
            android:id="@+id/thisYearAppName"
            android:layout_width="@dimen/widget_size_140"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/lato_bold"
            android:text="Application Name"
            android:textColor="@color/white"
            android:maxLines="1"
            android:textSize="@dimen/font_size_12"
            app:layout_constraintBottom_toBottomOf="@+id/thisYearAppImage"
            app:layout_constraintStart_toEndOf="@+id/thisYearAppImage"
            app:layout_constraintTop_toTopOf="@+id/thisYearAppImage" />


        <TextView
            android:id="@+id/thisYearTimeSpent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/lato_bold"
            android:text="11:56"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/widget_size_17"
            android:layout_height="@dimen/widget_size_17"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/thisYearTimeSpent"
            app:layout_constraintEnd_toStartOf="@+id/thisYearTimeSpent"
            app:layout_constraintTop_toTopOf="@+id/thisYearTimeSpent"
            app:srcCompat="@drawable/app_diary" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>