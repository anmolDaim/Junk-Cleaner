<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_size_270"
    android:background="@color/grey_bg"
    tools:context=".Fragment.OnePagerFragment">


    <View
        android:id="@+id/view2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="16dp"
        android:background="@color/green"
        app:layout_constraintBottom_toBottomOf="@+id/batteryPercentageTextView"
        app:layout_constraintEnd_toStartOf="@+id/batteryPercentageTextView"
        app:layout_constraintTop_toTopOf="@+id/batteryPercentageTextView" />

    <TextView
        android:id="@+id/batteryPercentageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/lato_bold"

        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view3"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="16dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/memoryUsageTextView"
        app:layout_constraintEnd_toStartOf="@+id/memoryUsageTextView"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/memoryUsageTextView" />

    <TextView
        android:id="@+id/memoryUsageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato_bold"

        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/batteryPercentageTextView"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Battery Charge"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"
        android:fontFamily="@font/lato_regular"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato_regular"
        android:text="Memory Used"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <View

        android:id="@+id/view4"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="16dp"
        android:background="@color/orange"
        app:layout_constraintBottom_toBottomOf="@+id/runningAppsTextView"
        app:layout_constraintEnd_toStartOf="@+id/runningAppsTextView"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/runningAppsTextView" />

    <TextView

        android:id="@+id/runningAppsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/memoryUsageTextView"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato_regular"
        android:text="Running Apps"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toBottomOf="@+id/runningAppsTextView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/junkCleanBtn"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/optimize_btn"
        android:text="junk clean"
        android:textAllCaps="true"
        android:textColor="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        app:layout_constraintVertical_bias="0.576" />

    <ProgressBar
        android:id="@+id/batteryChargeProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="65"
        android:background="@drawable/circle_shape_blue"
        android:progressDrawable="@drawable/circular_progress"
        app:layout_constraintBottom_toBottomOf="@+id/memoryUsedProgressBar"
        app:layout_constraintEnd_toEndOf="@+id/junkCleanBtn"
        app:layout_constraintStart_toStartOf="@+id/junkCleanBtn" />

    <ProgressBar

        android:id="@+id/memoryUsedProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="65"
        android:background="@drawable/circle_shape_green"
        android:progressDrawable="@drawable/circle_progress_green"
        app:layout_constraintBottom_toBottomOf="@+id/runningAppProgressBar"
        app:layout_constraintEnd_toEndOf="@+id/junkCleanBtn"
        app:layout_constraintStart_toStartOf="@+id/junkCleanBtn" />

    <ProgressBar

        android:id="@+id/runningAppProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="65"
        android:background="@drawable/circle_shape"
        android:progressDrawable="@drawable/circle_progress_orange"
        app:layout_constraintBottom_toTopOf="@+id/junkCleanBtn"
        app:layout_constraintEnd_toEndOf="@+id/junkCleanBtn"
        app:layout_constraintStart_toStartOf="@+id/junkCleanBtn"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>